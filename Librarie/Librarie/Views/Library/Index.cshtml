@model Librarie.Models.LibraryViewModels.LibraryViewModel
@{
   
    ViewData["Title"] = "Librarie";
}

<h2>Library</h2>
<p>Avem @Html.DisplayFor(model => model.informations.NumberOfBooks) carti in biblioteca</p>
<p>Data: @Model.informations.Date</p>
<table>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
    </tr>
    @for (int index = 0; index < Model.books.Count; ++index)
    {
        <tr>
            <td>@Model.books.ElementAt(index).id</td>
            <td>@Model.books.ElementAt(index).title</td>
            <td>@Model.books.ElementAt(index).author</td>
        </tr>
    }
</table>

